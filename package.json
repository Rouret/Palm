        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "log4js": "^6.7.1",
        "postgres": "^3.3.3",
        "socket.io": "^4.5.4",
        "socket.io-client": "^4.5.4",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.2",
