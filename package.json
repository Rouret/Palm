{
    "name": "Palm",
    "version": "0.0.1",
    "description": "MMORPG from scratch. Alone.",
    "main": "main.js",
    "scripts": {
        "start:dev": "webpack --watch && ts-node src/backend/bootstrap.ts ",
        "start:prod": "npm run schema:update && npm run build:server && npm run build:client && node build/backend/bootstrap.js",
        "build:server": "rimraf ./build && tsc",
        "build:client": "rimraf ./dist && webpack",
        "schema:update": "npx mikro-orm schema:update -r",
        "lint": "eslint . --ext .ts",
        "test": "jest"
    },
    "keywords": [],
    "author": "Rouret Lucas",
    "license": "ISC",
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.ts",
            "./dist/mikro-orm.config.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.31.0",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "nodemon-webpack-plugin": "^4.8.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@jest/globals": "^29.3.1",
        "@mikro-orm/cli": "^5.6.6",
